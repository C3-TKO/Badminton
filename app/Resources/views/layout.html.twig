    <body {% block body_id %}{% endblock %}>
        {% include '::navbar.html.twig' %}
        <div class="container-fluid">
        {% block body %}{% endblock %}
        {% block javascripts %}
        <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
        <script src="{{ asset('js/jquery.js') }}"></script>
