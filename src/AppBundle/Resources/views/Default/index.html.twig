{% extends 'AppBundle::layout.html.twig' %}

{%- block body -%}
<div class="row">
    <h4 class="col-xs-12">Ergebnisse vom letzten Spieltag ({{ date }}):</h4>
</div>
<div class="row">
    <table class="table table-striped table-hover">
        <tbody>
            {% for game in games %}
            <tr>
                <td>{{ game.team_a_player_a }}</td>
                <td>{{ game.team_a_player_b }}</td>
                <td>{{ game.team_b_player_a }}</td>
                <td>{{ game.team_b_player_b }}</td>
                <td>{{ game.team_a_score }} : {{ game.team_b_score }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{%- endblock -%}