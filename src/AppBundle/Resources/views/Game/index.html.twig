{% extends '::layout.html.twig' %}

{% block body -%}
    <h1>Game list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Idround</th>
                <th>Idteama</th>
                <th>Idteamb</th>
                <th>Teamascore</th>
                <th>Teambscore</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('crud_game__show', { 'id': entity.id }) }}">{{ entity.idRound }}</a></td>
                <td>{{ entity.idTeamA }}</td>
                <td>{{ entity.idTeamB }}</td>
                <td>{{ entity.teamAScore }}</td>
                <td>{{ entity.teamBScore }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('crud_game__show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('crud_game__edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('crud_game__new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
