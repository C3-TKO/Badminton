{% extends '::layout.html.twig' %}

{% block body %}
    <form class="form-horizontal" action="{{ path('login_check') }}" method="post">
        <div class="form-group">
            <label class="sr-only" for="username">Username</label>
            <div class="input-group col-xs-10 col-xs-offset-1">
                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                <input id="username" type="text" name="_username" value="{{ last_username }}" placeholder="Username" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="sr-only" for="password">Password</label>
            <div class="input-group col-xs-10 col-xs-offset-1">
                <div class="input-group-addon"><i class="fa fa-key"></i></div>
                <input id="password" type="password" name="_password" placeholder="Password" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-10 col-xs-offset-1">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Login</button>
            </div>
        </div>
    </form>
{% endblock %}
